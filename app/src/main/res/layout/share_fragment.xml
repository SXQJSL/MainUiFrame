<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/activity_title"></include>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btn_shareWX1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="分享到微信好友（通过修改微信sdk，绕过微信审核进行分享）"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/btn_shareWX2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/btn_shareWX1"
                    android:layout_marginTop="30dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="分享到微信朋友圈（通过修改微信sdk，绕过微信审核进行分享）"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/btn_shareWX3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/btn_shareWX1"
                    android:layout_marginTop="30dp"
                    android:background="#50aade"
                    android:text="分享到微信好友通过Intent分享（图片）"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/btn_shareWX4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/btn_shareWX1"
                    android:layout_marginTop="30dp"
                    android:background="#50aade"
                    android:text="分享到微信好友通过Intent分享（文字）"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/btn_shareWX5"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/btn_shareWX1"
                    android:layout_marginTop="30dp"
                    android:background="#50aade"
                    android:text="分享到微信朋友圈通过Intent分享"
                    android:textColor="#000" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>